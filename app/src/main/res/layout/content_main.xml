<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ariz.projectsample.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:clickable="true"
                    android:background="#e1d295"
                    android:src="@drawable/delhiie" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/kolkatai"
                    android:id="@+id/iv2"
                    android:background="#8c9b66"
                    android:clickable="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/mumbaii"
                    android:id="@+id/iv4"
                    android:background="#ce5544"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:clickable="true"
                    android:background="#cce6ff"
                    android:src="@drawable/chennaii" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
